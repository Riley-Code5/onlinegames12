entrypoint = "index.js"
modules = ["nodejs-20", "python-3.11"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "nodejs"

[deployment]
run = ["node", "index.js"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 5173
externalPort = 5173
exposeLocalhost = true

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 9005
externalPort = 80

[workflows]
runButton = "Deploy (Main)"

[[workflows.workflow]]
name = "Deploy (Main)"
mode = "sequential"
author = 38722240

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "firebase deploy"

[[workflows.workflow]]
name = "Preview"
mode = "sequential"
author = 38722240

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "http-server"
